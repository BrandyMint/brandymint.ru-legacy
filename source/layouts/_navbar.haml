.navbar.application-navbar.navbar-fixed-top{role: 'application-navbar'}
  .container
    %a.pull-left{href: "#{root_app_path}"}
      %img.navbar-brand-logo.navbar-fixed-item{src: image_path("logo_brandymint_black.svg"), alt: 'Brandymint'}
    
    %button.navbar-toggle.navbar-fixed-item{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar

    .navbar-collapse.collapse
      %ul.nav.navbar-nav.pull-right
        -#%li.active
          %a{href: "#"} Home
        %li
          %a{href: "#{root_app_path}#projects"} Our work
        %li
          %a{href: "#{root_app_path}#contacts"} Contact us
        %li
          = partial 'hire_us'
    .clearfix



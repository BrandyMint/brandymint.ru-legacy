- p = locals[:p]
- default_url = locals[:default_url]

%h3.product-title
  - if default_url.present?
    %a{href: default_url, target: :blank}
      = partial 'work/project_block_title', locals: {title: p.title, logo: p.logo}
  - else
    = partial 'work/project_block_title', locals: {title: p.title, logo: p.logo}
-#.project-features
  - p.features.each_pair do |k,v|
    %span= v
.project-description
  %p= md p.description if p.description.present?
-#%h5.technology-title Technologies
-#.project-technologies
  - if p.technologies.present?
    - p.technologies.each_pair do |k,v|
      %span= v
-#%h5.technology-title Methodologies
-#.project-technologies
  - if p.methodologies.present?
    - p.methodologies.each_pair do |k,v|
      %span= v
.project-platforms
  - if p.devices.present?
    - device_types = []
    - p.devices.each do |d|
      - device_types.push project_badge_link p, d.device, css_class: 'btn btn-primary-outline-sm'
    - device_types.uniq.each do |t|
      = t
  - else
    = project_badge_link p, 'web', css_class: 'btn btn-primary-outline-sm'


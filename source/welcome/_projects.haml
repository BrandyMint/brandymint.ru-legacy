- projects = data.welcome_projects
- projects.each_with_index do |p,i|
  %div{ class: "welcome-project welcome-project-#{p.slug} welcome-project-bg-#{p.background}" }
    .welcome-project-container-image{ style: "background-image: url('images/projects/#{p.welcome_image}')"}
      .welcome-project-container
        .container
          .row
            .col-md-8.col-md-offset-2.welcome-project-content
              %h2.welcome-project-header
                = p.title
              .welcome-project-subheader
                = p.announce
              %a.welcome-project-btn{ href: '' }
                Read more
.welcome-block
  .row
    .col-md-8.col-md-offset-2.text-center
      = link_to 'more projects', '', class: 'btn btn-primary-outline'

%hr.mini

- partners = {aip: 'aip.png', elegion: 'elegion.png', ideast: 'ideast.png', itpark: 'itpark.png', investcafe: 'investcafe.png', chebit: 'chebit.png'}
.welcome-block.welcome-partners
  .container
    .row
      .col-md-8.col-md-offset-2
        %h2.welcome-header
          Who we work with
    .row
      - partners.each do |partner, logo|
        .col-sm-2.col-xs-6.welcome-partners-logo
          -#= partner
          %img{ src: image_path("partners/#{logo}"), class: 'welcome-partners-logo-image' }

%hr.mini


---
body_class: services-page body-navbar-white
navbar_state: active
---


- @projects_list = data.projects
- @projects_work = data.work
- @projects = @projects_work.merge(@projects_list).sort {|a, b| Date.parse(b[1].date) <=> Date.parse(a[1].date) }


- if @projects.present?
  .secondary-navbar.navbar.navbar-fixed-top{ role: 'secondary-navbar'}
    .container
      - @projects.each do |f|
        - p = f[1]
        = link_to p.title, "##{p.slug}", class: "app-secondary-nav-item", role: 'project-link', data: {'link-project' => "#{p.slug}"}

.work-page
  .projects-container
    - @projects.each do |f|
      - p = f[1]
      %a{name: p.slug}
      %div{ class: "project-container project-container-#{p.slug}", data: {project: "#{p.slug}"}, role: "project-waypoint-start"}
        = partial "work/project_block", locals: {p: p}

= more_link_block 'our products', url_for('/products/')
= more_link_block 'contact us', url_for('/contact/')


